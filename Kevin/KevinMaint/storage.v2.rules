rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Maintenance request photos
    match /maintenance-photos/{requestId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    // Legacy path kept readable for migration/backward compatibility
    match /issue-photos/{issueId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
